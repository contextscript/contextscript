<!DOCTYPE html>
<html>

<head>
	<meta charset=utf-8 />
	<link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<title>Context Script</title>
	<meta name="description" content="Scripts for any situation.">
	<link href="/site.css" type="text/css" rel="stylesheet" />
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<script src="https://login.persona.org/include.js" type="text/javascript"></script>
</head>

<body>
	<div class="header">
		<h2><a href="/">Context Script</a></h2>
	</div>
	<div class="login">
		<% if (!user) { %>
			<script>
				$(function() {
					$("#browserid").click(function() {
						navigator.id.get(function(assertion) {
							if (assertion) {
								$("input").val(assertion);
								$("form").submit();
							}
							else {
								location.reload();
							}
						});
					});
				});
			</script>
			<form action="/auth/browserid" method="post" style="display:none;">
				<input type="text" name="assertion" />
			</form>
			<a class="btn" id="browserid">Sign In</a>
		<% } else { %>
			<a class="btn" href="/myscripts">My Scripts</a> |
			<a class="btn" href="/logout">Sign Out</a>
		<% } %>
	</div>
	<div class="main">
		<%- body %>
	</div>
</body>

</html>
