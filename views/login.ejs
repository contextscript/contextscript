<h2>Sign in is required to view this page</h2>

<form action="/auth/browserid" method="post" style="display:none;">
	<input type="text" name="assertion"/>
</form>

<img src="https://developer.mozilla.org/files/3969/plain_sign_in_blue.png" id="browserid-login"/>
<script>
  $("#browserid-login").click(function(){
    navigator.id.get(function(assertion) {
      if (assertion) {
        $("input").val(assertion);
        $("form").submit();
      } else {
        location.reload();
      }
    });
  });
</script>
